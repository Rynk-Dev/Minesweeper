<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
    <bitmap
        android:src="@drawable/mine_cropped"
        android:filter="false"
        android:alpha="@fraction/alpha_full"
        android:width="@dimen/score_icon_size"
        android:height="@dimen/score_icon_size"
        />
</item>
<item android:state_checked="false">
    <bitmap
        android:src="@drawable/mine_cropped"
        android:filter="false"
        android:alpha="@fraction/alpha_half"
        android:width="@dimen/score_icon_size"
        android:height="@dimen/score_icon_size"
        />
</item>
</selector>