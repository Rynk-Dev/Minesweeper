    android:id="@+id/main"
    tools:context=".Play"
    style="@style/bg"
    >
    <RelativeLayout
        android:id="@+id/navbar"
        style="@style/navbar"
        >
        <ImageButton
            android:id="@+id/nav_end_button"
            style="@style/nav_button.start"
            android:background="@drawable/close"
            android:tag="end"
            android:onClick="endGameListener"
            />
        <!--<TextView
            android:id="@+id/debug_end_game"
            style="@style/nav_title"
            android:text="End"
            />-->
        <ImageButton
            android:id="@+id/nav_hint_button"
            style="@style/nav_button.end"
            android:background="@drawable/help"
            android:tag="rules"
            />
    </RelativeLayout>
