        <RadioGroup
            android:id="@+id/cursor_mode_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:background="@drawable/score_border"
            android:backgroundTint="@color/dark_blue"
            android:padding="@dimen/border_width">

            <RadioButton
                android:id="@+id/flag_cursor"
                android:layout_width="@dimen/score_icon_size"
                android:layout_height="@dimen/score_icon_size"
                android:background="@drawable/flag_mode_selector"
                android:button="@null"
                android:checked="true"
                android:tag="@string/flag_cursor"
                />
            <RadioButton
                android:id="@+id/mine_cursor"
                android:layout_width="@dimen/score_icon_size"
                android:layout_height="@dimen/score_icon_size"
                android:background="@drawable/mine_mode_selector"
                android:button="@null"
                android:tag="@string/mine_cursor"
                />
        </RadioGroup>
    </RelativeLayout>


