<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/bg"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints, ContentDescription">

    <ImageView
        android:id="@+id/logo"
        style="@style/hero"
        android:src="@drawable/mine_icon"
        app:layout_constraintBottom_toTopOf="@+id/textView"/>

    <TextView
        android:id="@+id/textView"
        style="@style/banner_title"
        android:text="@string/title" />

<!--    <TextView-->
<!--        android:id="@+id/textView2"-->
<!--        style="@style/subheading.centered"-->
<!--        android:text="@string/player_name"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/name_input" />-->

    <EditText
        android:id="@+id/name_input"
        style="@style/centered"
        android:layout_width="@dimen/name_input_width"
        android:layout_height="@dimen/name_input_height"
        android:layout_marginBottom="@dimen/menu_button_margin"
        android:background="@drawable/score_border"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:text="@string/placeholder_name"
        android:textSize="@dimen/text_size_3"
        app:layout_constraintBottom_toTopOf="@id/difficulty_button">

        <requestFocus />
    </EditText>

    <ToggleButton
        android:id="@+id/difficulty_button"
        style="@style/menu_button"
        android:textColor="@color/white"
        android:textOn="@string/difficulty_medium_btn"
        android:textOff="@string/difficulty_easy_btn"
        app:layout_constraintBottom_toTopOf="@+id/button4" />

<!--    MENU BUTTONS        -->

    <Button
        android:id="@+id/button4"
        style="@style/menu_button_icon"
        android:tag="@string/play_btn_tag"
        android:text="@string/play_btn_text"
        app:icon="@drawable/play"
        app:layout_constraintBottom_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button6"
        style="@style/menu_button_icon"
        android:tag="@string/rules_btn_tag"
        android:text="@string/rules_title"
        app:icon="@drawable/help"
        app:layout_constraintBottom_toTopOf="@id/button5" />

    <Button
        android:id="@+id/button5"
        style="@style/menu_button_icon"
        android:tag="@string/scores_btn_tag"
        android:text="@string/scores_btn_text"
        app:icon="@drawable/medal"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>